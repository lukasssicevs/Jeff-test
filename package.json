{
  "name": "jeff-test-monorepo",
  "private": true,
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:web": "npm run build --workspace=web",
    "build:mobile": "npm run build --workspace=mobile",
    "build:shared": "npm run build --workspace=shared",
    "dev": "npm run dev --workspaces --if-present",
    "dev:all": "concurrently \"npm run dev:web\" \"npm run dev:mobile\" --names \"WEB,MOBILE\" --prefix-colors \"blue,magenta\"",
    "dev:web": "npm run dev --workspace=web",
    "dev:mobile": "npm run start --workspace=mobile",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "npm run check-types --workspaces --if-present",
    "verify": "node verify-setup.js",
    "clean": "rm -rf node_modules web/node_modules mobile/node_modules shared/node_modules"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "prettier": "^3.6.2",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "web",
    "mobile",
    "shared"
  ]
}
